<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:id="@+id/linearForSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightGrey2"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:id="@+id/searchDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <EditText
                        android:id="@+id/searchView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Pesquisar o Museus ou Eventos"
                        android:padding="8dp"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/buttonSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesquisar" />

                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:weightSum="10">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/DiscoveryCategoriesList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal" />

                <LinearLayout
                    android:id="@+id/linearExposicoes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_border_shape"
                        android:padding="8dp"
                        android:text="Exposições"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/DiscoveryEventsList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarFadeDuration="50000"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"/>

                <LinearLayout
                    android:id="@+id/linearLayoutmuseum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/museumTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_border_shape"
                        android:padding="8dp"
                        android:text="Museus"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDiscovery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5"/>
            </LinearLayout>


        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
